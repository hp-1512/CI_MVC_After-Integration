.hidden-overlay-button-area {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100%;
  width: 100%;
  opacity: 0;
  transition: .3s ease;
  background-color: rgba(0,0,0,0.7);
}
.hidden-overlay-button{
    transition: .5s ease;
    opacity:0;
    position:absolute;
    top:50%;
    left:50%;
    transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    text-align:center;
    background-color: transparent;
    border: 2px solid #ffffff;
    color: #ffffff;
    border-radius: 24px;
    font-size: 1.1rem;
    
}
.card-image-part .hidden-overlay-button:hover{
